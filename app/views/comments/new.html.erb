<div class="comment-new-wrapper" >
  <div class="container">
    <% if current_user && current_user.level == "pro" %>
      <%= render :partial => "pronav" %>
    <% elsif current_user && current_user.level == "ama" %>
      <%= render :partial => "navama" %>
    <% end %>
    <div class="user">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <label for="body">コメント本文</label>
            <%= f.text_field :body, class: 'form-control'%>

            <% if current_user %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <%= f.hidden_field :lesson_id, value: params[:lesson_id] %>
              <%= f.hidden_field :user_id, value: params[:user_id] %>

            <% end %>
          </div>
          <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
